<section class="hero-page twoColumn">
{% macro show(titre,subtitle,img) %}
  <div class="leftColomn">
    <div class="hero-page_txt_pres">
      <h1 class="hero-page_titre">{{ titre }}</h1>
      <h2 class="hero-page_subtitle"> {{ subtitle }}</h2>
      {{ buttonPrimary.show('Start free trial') }}
    </div>
  </div>

  <div class="rightColomn">
    <img class="hero_img" src="{{ img }}">
  </div>
  {% endmacro %}
</section>